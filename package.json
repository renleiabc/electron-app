{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.azimiao.test",
    "asar": true,
    "productName": "hello",
    "afterPack": "dist/afterPack.js",
    "directories": {
      "buildResources": "dist",
      "output": "build"
    },
    "win": {
      "icon": "dist/icons/icon.ico"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://github.com/renleiabc/electron-app"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "dist/icons/icon.ico",
      "uninstallerIcon": "dist/icons/icon.ico",
      "installerHeader": "dist/icons/icon.ico",
      "installerHeaderIcon": "dist/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^10.1.4",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-updater": "^4.3.5"
  }
}